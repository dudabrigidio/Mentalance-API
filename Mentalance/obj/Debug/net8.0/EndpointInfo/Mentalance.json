  "components": {
    "schemas": {
      "AnaliseSemanal": {
        "required": [
          "emocaoPredominante",
          "recomendacao",
          "resumo",
          "semanaReferencia"
        ],
        "type": "object",
        "properties": {
          "idAnalise": {
            "type": "integer",
            "description": "Identificador único da análise semanal",
            "format": "int32"
          },
          "idUsuario": {
            "type": "integer",
            "description": "Identificador do usuário para o qual a análise foi gerada",
            "format": "int32"
          },
          "semanaReferencia": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string",
            "description": "Período de referência da análise (ex: \"Semana 01/01/2024 a 07/01/2024\")"
          },
          "emocaoPredominante": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string",
            "description": "Emoção que mais apareceu nos check-ins da semana"
          },
          "resumo": {
            "minLength": 1,
            "type": "string",
            "description": "Resumo textual gerado por ML sobre o estado emocional da semana"
          },
          "recomendacao": {
            "minLength": 1,
            "type": "string",
            "description": "Recomendação personalizada gerada por ML baseada na análise da semana"
          }
        },
        "additionalProperties": false,
        "description": "Representa uma análise semanal gerada automaticamente baseada nos check-ins do usuário"
      },
      "Checkin": {
        "required": [
          "análiseSentimento",
          "dataCheckin",
          "emoção",
          "respostaGerada",
          "texto"
        ],
        "type": "object",
        "properties": {
          "idCheckin": {
            "type": "integer",
            "description": "Identificador único do check-in",
            "format": "int32"
          },
          "idUsuario": {
            "type": "integer",
            "description": "Identificador do usuário que realizou o check-in",
            "format": "int32"
          },
          "dataCheckin": {
            "type": "string",
            "description": "Data e hora em que o check-in foi realizado",
            "format": "date-time"
          },
          "emoção": {
            "maxLength": 100,
            "enum": [
              "Feliz",
              "Cansado",
              "Ansioso",
              "Calmo",
              "Estressado"
            ],
            "type": "string",
            "description": "Emoção registrada pelo usuário no check-in"
          },
          "texto": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string",
            "description": "Texto descritivo do check-in fornecido pelo usuário"
          },
          "análiseSentimento": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string",
            "description": "Análise de sentimento gerada automaticamente (positivo, neutro, negativo)"
          },
          "respostaGerada": {
            "minLength": 1,
            "type": "string",
            "description": "Resposta personalizada gerada automaticamente baseada na emoção e texto"
          }
        },
        "additionalProperties": false,
        "description": "Representa um check-in emocional realizado por um usuário"
      },
      "CheckinDto": {
        "required": [
          "emoção",
          "texto"
        ],
        "type": "object",
        "properties": {
          "idUsuario": {
            "type": "integer",
            "description": "Identificador do usuário que está realizando o check-in",
            "format": "int32"
          },
          "emoção": {
            "enum": [
              "Feliz",
              "Cansado",
              "Ansioso",
              "Calmo",
              "Estressado"
            ],
            "type": "string",
            "description": "Emoção registrada pelo usuário no check-in"
          },
          "texto": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string",
            "description": "Texto descritivo do check-in fornecido pelo usuário"
          }
        },
        "additionalProperties": false,
        "description": "DTO (Data Transfer Object) para criação e atualização de check-ins"
      },
      "LoginDto": {
        "required": [
          "email",
          "senha"
        ],
        "type": "object",
        "properties": {
          "email": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string",
            "description": "Endereço de e-mail do usuário"
          },
          "senha": {
            "minLength": 1,
            "type": "string",
            "description": "Senha do usuário"
          }
        },
        "additionalProperties": false,
        "description": "DTO (Data Transfer Object) para autenticação de usuários"
      },
      "Usuario": {
        "required": [
          "cargo",
          "dataCadastro",
          "email",
          "nome",
          "senha"
        ],
        "type": "object",
        "properties": {
          "idUsuario": {
            "type": "integer",
            "description": "Identificador único do usuário",
            "format": "int32"
          },
          "nome": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string",
            "description": "Nome completo do usuário"
          },
          "email": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string",
            "description": "Endereço de e-mail do usuário (usado para login)"
          },
          "senha": {
            "minLength": 1,
            "type": "string",
            "description": "Senha do usuário (armazenada em texto plano - considerar hash em produção)"
          },
          "cargo": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string",
            "description": "Cargo/função do usuário no sistema"
          },
          "dataCadastro": {
            "type": "string",
            "description": "Data e hora de cadastro do usuário no sistema",
            "format": "date-time"
          }
        },
        "additionalProperties": false,
        "description": "Representa um usuário do sistema Mentalance"
      },
      "UsuarioDto": {
        "required": [
          "cargo",
          "email",
          "nome",
          "senha"
        ],
        "type": "object",
        "properties": {
          "nome": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string",
            "description": "Nome completo do usuário"
          },
          "email": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string",
            "description": "Endereço de e-mail do usuário (usado para login)"
          },
          "senha": {
            "minLength": 1,
            "type": "string",
            "description": "Senha do usuário"
          },
          "cargo": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string",
            "description": "Cargo/função do usuário no sistema"
          }
        },
        "additionalProperties": false,
        "description": "DTO (Data Transfer Object) para criação e atualização de usuários"
      },
      "WeatherForecast": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "temperatureC": {
            "type": "integer",
            "format": "int32"
          },
          "temperatureF": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "summary": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  },
